<!-- Start Search Popup -->
<div class="box-search-content search_active block-bg close__top">
    <form id="search_mini_form" class="minisearch" action="/book-shop/" method="GET">
        <div class="field__search">
            <input name="q" type="text" placeholder="Search entire store here...">
        </div>
    </form>
    <div class="close__wrap">
        <span>Đóng</span>
    </div>
</div>
<!-- End Search Popup -->
<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area bg-image--6">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h3 class="bradcaump-title">DANH MỤC SÁCH</h3>
                    <nav class="bradcaump-content">
                        <a class="breadcrumb_item" href="/">Trang chủ</a>
                        <span class="brd-separetor">/</span>
                        <span class="breadcrumb_item active">Danh mục sách</span>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<!-- Start Shop Page -->
<div class="page-shop-sidebar left--sidebar bg--white section-padding--lg pb-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-12 order-2 order-lg-1 md-mt-40 sm-mt-40">
                <div class="shop__sidebar">
                    <aside class="wedget__categories poroduct--cat">
                        <h3 class="wedget__title">Danh mục sách</h3>
                        <ul>
                            {{#each CATEGORY}}
                            <li><a href="/book-shop?catId={{_id}}">{{nameOfCategory}}
                                    <span>({{numberOfProduct}})</span></a></li>
                            {{/each}}
                        </ul>
                    </aside>
                    <aside class="wedget__categories sidebar--banner">
                        <img src="images/others/banner_left.jpg" alt="banner images">
                    </aside>
                </div>
            </div>
            <div class="col-lg-9 col-12 order-1 order-lg-2">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="shop__list__wrapper d-flex flex-wrap flex-md-nowrap justify-content-end">
                            <div class="orderby__wrapper ">
                                <div class="col-sm-3 input-group d-inline-flex">
                                    <div class="dropdown">
                                        {{#eq sort "asc"}}
                                        <button class="btn btn-light dropdown-toggle col-sm-12" id="dropdownCategory"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <a class="t-none" href="/book-shop?sort=asc">Giá từ
                                                thấp đến cao</a> </button>
                                        {{else}}
                                        {{#eq sort "desc" }}
                                        <button class="btn btn-light dropdown-toggle col-sm-12" id="dropdownCategory"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <a class="t-none" href="/book-shop?sort=desc">Giá
                                                từ cao đến thấp </a>
                                        </button>

                                        {{else}}
                                        <button class="btn btn-light dropdown-toggle col-sm-12" type="button"
                                            id="dropdownCategory" data-toggle="dropdown" aria-haspopup="true"
                                            aria-expanded="false">
                                            Lọc
                                        </button>
                                        {{/eq}}
                                        {{/eq}}

                                        <div class="dropdown-menu" aria-labelledby="dropdownCategory">
                                            {{!-- <button class="dropdown-item btn--category">All </button> --}}
                                            <button name="Giá từ thấp đến cao" value="01"
                                                class="dropdown-item btn--category"><a class="t-none"
                                                    href="/book-shop?sort=asc">Giá từ
                                                    thấp đến cao</a></button>
                                            <button name="Giá từ cao đến thấp" value="02"
                                                class="dropdown-item btn--category"><a class="t-none"
                                                    href="/book-shop?sort=desc"> Giá
                                                    từ cao đến thấp </a></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="shop-grid tab-pane fade show active" id="nav-grid" role="tabpanel">
                    <div class="row">
                        <!-- Start Single Product -->
                        {{#each books.docs}}
                        <div class="product product__style--3 col-lg-4 col-md-4 col-sm-6 col-12">
                            <div class="product__thumb">
                                <a class="first__img" href="/book-detail/{{_id}}"><img src={{cover}} alt="product image"
                                        class="imgBook"></a>
                                {{#if best_seller}}
                                <div class="hot__box">
                                    <span class="hot-label">Bán chạy</span>
                                </div>
                                {{/if}}
                            </div>
                            <div class="product__content content--center">
                                <h4><a href="/book-detail/{{_id}}">{{title}}</a></h4>
                                <ul class="prize d-flex">
                                    <li>{{formatNumber price}}<sup>đ</sup></li>
                                    <li class="old_prize">{{formatNumber old_price}}<sup>đ</sup></li>
                                </ul>
                                <div class="action">
                                    <div class="actions_inner">
                                        <ul class="add_to_links">
                                            <li><a class="cart add-to-cart" data-id="{{_id}}"><i
                                                        class="bi bi-shopping-cart-full"></i></a></li>
                                            <li><a class="compare" href="#"><i class="bi bi-heart-beat"></i></a></li>
                                            <li><a data-toggle="modal" title="Quick View"
                                                    class="quickview modal-view detail-link" href="#productmodal"><i
                                                        class="bi bi-search"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="product__hover--content">
                                    <ul class="rating d-flex">
                                        <li class="on"><i class="fa fa-star-o"></i></li>
                                        <li class="on"><i class="fa fa-star-o"></i></li>
                                        <li class="on"><i class="fa fa-star-o"></i></li>
                                        <li><i class="fa fa-star-o"></i></li>
                                        <li><i class="fa fa-star-o"></i></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        <!-- End Single Product -->
                    </div>

                    <nav aria-label="Page navigation example" style="margin-top: 20px;">

                        <ul class="pagination justify-content-center">

                            {{#isnt books.page 1}}

                            <li class="page-item">
                                {{#if catId}}
                                <a class="page-link" href="/book-shop?catId={{catId}}&page={{books.prevPage}}"
                                    aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                {{else}}{{#if q}}
                                <a class="page-link" href="/book-shop?q={{q}}&page={{books.prevPage}}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                {{else}}{{#if sort}}
                                <a class="page-link" href="/book-shop?sort={{srt}}&page={{books.prevPage}}"
                                    aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>

                                {{else}}
                                <a class="page-link" href="/book-shop?page={{books.prevPage}}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                {{/if}}
                                {{/if}}
                                {{/if}}

                            </li>
                            {{/isnt}}


                            {{#if books.hasPrevPage}}
                            <li class="page-item">
                                {{#if catId}}
                                <a class="page-link" href="/book-shop?catId={{catId}}&page={{books.prevPage}}">{{books.prevPage}}
                                </a>
                                {{else}}{{#if q}}
                                <a class="page-link" href="/book-shop?q={{q}}&page={{books.prevPage}}">{{books.prevPage}}
                                </a>
                                {{else}}{{#if sort}}
                                <a class="page-link" href="/book-shop?sort={{srt}}&page={{books.prevPage}}">{{books.prevPage}}
                                </a>
                                {{else}}
                                <a class="page-link" href="/book-shop/?page={{books.prevPage}}">{{books.prevPage}}
                                </a>
                                {{/if}}
                                {{/if}}
                                {{/if}}
                            </li>
                            {{/if}}


                            <li class="page-item active">
                                <a class="page-link" href="javascript:void(0)" tabindex="-1">{{books.page}}</a>
                            </li>

                            {{#if books.hasNextPage}}
                            <li class="page-item">
                                {{#if catId}}
                                <a class="page-link" href="/book-shop?catId={{catId}}&page={{books.nextPage}}">{{books.nextPage}}
                                </a>
                                {{else}}{{#if q}}
                                <a class="page-link" href="/book-shop?q={{q}}&page={{books.nextPage}}">{{books.nextPage}}
                                </a>
                                {{else}}{{#if sort}}
                                <a class="page-link" href="/book-shop?sort={{srt}}&page={{books.nextPage}}">{{books.nextPage}}
                                </a>
                                {{else}}
                                <a class="page-link" href="/book-shop?page={{books.nextPage}}">{{books.nextPage}}
                                </a>
                                {{/if}}
                                {{/if}}
                                {{/if}}
                            </li>
                            {{/if}}

                            {{#gt books.totalPages books.page }}
                            <li class="page-item">
                                {{#if catId}}
                                <a class="page-link" href="/book-shop?catId={{catId}}&page={{books.nextPage}}"
                                    aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                                {{else}}{{#if q}}
                                <a class="page-link" href="/book-shop?q={{q}}&page={{books.nextPage}}" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                                {{else}}{{#if sort}}
                                <a class="page-link" href="/book-shop?sort={{srt}}&page={{books.nextPage}}"
                                    aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                                {{else}}
                                <a class="page-link" href="/book-shop?page={{books.nextPage}}" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                                {{/if}}
                                {{/if}}
                                {{/if}}

                            </li>
                            {{/gt}}

                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<!-- End Shop Page -->